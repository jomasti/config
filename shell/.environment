EDITOR=nvim
PAGER=less
BROWSER=chromium
TERMINAL=urxvtc
export EDITOR PAGER BROWSER TERMINAL

LANG="en_US.UTF-8"
LC_CTYPE="en_US.UTF-8"
LC_ALL="en_US.UTF-8"
TZ=America/Phoenix
export LANG LC_CTYPE LC_ALL TZ

XDG_CONFIG_HOME="$HOME/.config"
XDG_DATA_HOME="$HOME/.local/share"
XDG_CACHE_HOME="$HOME/.cache"
export XDG_CONFIG_HOME XDG_DATA_HOME XDG_CACHE_HOME

XDG_DOWNLOAD_DIR="$HOME/Downloads"
XDG_ETC_DIR="$HOME/etc"
XDG_BIN_DIR="$HOME/bin"
XDG_TMP_DIR="$HOME/tmp"
export XDG_DOWNLOAD_DIR XDG_ETC_DIR XDG_BIN_DIR XDG_TMP_DIR

DISPLAY=:0
export DISPLAY

SHELL_ALIASES="$HOME/.shell_aliases"
SHELL_FUNCTIONS="$HOME/.shell_functions"
export SHELL_ALIASES SHELL_FUNCTIONS

export UZBL_UTIL_DIR=$XDG_DATA_HOME/uzbl/util/
export INTEL_BATCH=1
export ARCH_HASKELL="Joshua Stiefer <facedelajunk@gmail.com>"
export GTK2_RC_FILES="$HOME/.gtkrc-2.0"
export SDL_VIDEO_FULLSCREEN_DISPLAY=1
export STEAM_RUNTIME=0

export PYENV_ROOT="$HOME/.pyenv"

