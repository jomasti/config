! ----------------------------------------------------------------------------
! file:     ~/.Xresources
! author:   Joshua Stiefer
! modified: December 2011
! vim: set fenc=utf-8:nu:ai:si:et:ts=4:sw=4:ft=xdefaults:
! ----------------------------------------------------------------------------

! xft
Xft.dpi:        96
Xft.antialias:  true
Xft.rgba:       rgb
Xft.hinting:    true
Xft.hintstyle:  hintslight
Xft.lcdfilter:  lcddefault

! cursor theme
Xcursor.theme:	Vanilla-DMZ

! general
URxvt.urgentOnBell: true
URxvt.saveLines: 65535
URxvt.internalBorder: 0
URxvt.externalBorder: 0
URxvt.borderless: true

! colors and transparency
!URxvt.inheritPixmap: true
!URxvt.transparent: true
!URxvt.tintColor: #000
!URxvt.shading: 50
!URxvt.depth:      32

! fonts
URxvt.font: xft:Anka/Coder:pixelsize=12:antialias=true:hinting=true
!URxvt.font: -*-terminus-medium-*-*-*-12-*-*-*-*-*-*-*
URxvt.boldFont: xft:Anka/Coder:pixelsize=12:antialias=true:bold:hinting=true
!URxvt.font: -*-terminus-bold-*-*-*-12-*-*-*-*-*-*-*
URxvt.italicFont: xft:Anka/Coder:pixelsize=12:antialias=true:italic:autohint=true:hinting=true
URxvt.bolditalicFont: xft:Anka/Coder:pixelsize=12:antialias=true:bold:italic:autohint=true:hinting=true

! scrollbar
URxvt.scrollBar: true
URxvt.scrollBar_right: true
URxvt.scrollBar_floating: true
URxvt.scrollColor: #cdff00

! extensions
URxvt.perl-ext-common:  default,matcher,url-select
URxvt.urlLauncher:      /usr/bin/firefox
URxvt.keysym.M-u:       perl:url-select:select_next
URxvt.underlineURLs: 	true
URxvt.matcher.button:   1

! xscreensaver

!font settings
xscreensaver.Dialog.headingFont:        -*-dina-bold-r-*-*-12-*-*-*-*-*-*-*
xscreensaver.Dialog.bodyFont:           -*-dina-medium-r-*-*-12-*-*-*-*-*-*-*
xscreensaver.Dialog.labelFont:          -*-dina-medium-r-*-*-12-*-*-*-*-*-*-*
xscreensaver.Dialog.unameFont:          -*-dina-medium-r-*-*-12-*-*-*-*-*-*-*
xscreensaver.Dialog.buttonFont:         -*-dina-bold-r-*-*-12-*-*-*-*-*-*-*
xscreensaver.Dialog.dateFont:           -*-dina-medium-r-*-*-12-*-*-*-*-*-*-*
xscreensaver.passwd.passwdFont:         -*-dina-bold-r-*-*-12-*-*-*-*-*-*-*
!general dialog box (affects main hostname, username, password text)
xscreensaver.Dialog.foreground:         #757575
xscreensaver.Dialog.background:         #181818
xscreensaver.Dialog.topShadowColor:     #000000
xscreensaver.Dialog.bottomShadowColor:  #000000
xscreensaver.Dialog.Button.foreground:  #666666
xscreensaver.Dialog.Button.background:  #ffffff
!username/password input box and date text colour
xscreensaver.Dialog.text.foreground:    #666666
xscreensaver.Dialog.text.background:    #ffffff
xscreensaver.Dialog.internalBorderWidth:24
screensaver.Dialog.borderWidth:        20
xscreensaver.Dialog.shadowThickness:    2
!timeout bar (background is actually determined by Dialog.text.background)
xscreensaver.passwd.thermometer.foreground:  #ff3b77
xscreensaver.passwd.thermometer.background:  #000000
xscreensaver.passwd.thermometer.width:       8
!datestamp format--see the strftime(3) manual page for details
xscreensaver.dateFormat:    %I:%M%P %a %b %d, %Y



