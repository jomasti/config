! ----------------------------------------------------------------------------
! file:     ~/.Xresources
! author:   Joshua Stiefer
! modified: September 2015
! vim: set fenc=utf-8:nu:ai:si:et:ts=4:sw=4:ft=xdefaults:
! ----------------------------------------------------------------------------

! xft
Xft.dpi:        96
Xft.antialias:  true
Xft.rgba:       rgb
Xft.hinting:    true
Xft.hintstyle:  hintslight
Xft.lcdfilter:  lcddefault

! cursor theme
Xcursor.theme:	Vanilla-DMZ

! general
URxvt.urgentOnBell: true
URxvt.saveLines: 65535
URxvt.internalBorder: 0
URxvt.externalBorder: 0
URxvt.borderless: true

! colors and transparency
!URxvt.inheritPixmap: true
!URxvt.transparent: true
!URxvt.tintColor: #000
!URxvt.shading: 50
!URxvt.depth:      32

! fonts
URxvt.font: xft:Inconsolata for Powerline:pixelsize=13:antialias=true:hinting=true,xft:DejaVu Sans Mono:pixelsize=13:antialias=true:hinting=true
URxvt.boldFont: xft:Inconsolata for Powerline:bold:pixelsize=13:antialias=true:hinting=true,xft:DejaVu Sans Mono:bold:pixelsize=13:antialias=true:hinting=true
URxvt.italicFont: xft:Inconsolata for Powerline:italic:pixelsize=13:antialias=true:hinting=true,xft:DejaVu Sans Mono:italic:pixelsize=13:antialias=true:hinting=true
URxvt.boldItalicFont: xft:Inconsolata for Powerline:bold:italic:pixelsize=13:antialias=true:hinting=true,xft:DejaVu Sans Mono:bold:italic:pixelsize=13:antialias=true:hinting=true

! scrollbar
URxvt.scrollBar: false

! extensions
URxvt.perl-ext-common:  clipboard,default,matcher,url-select
URxvt.urlLauncher:      /usr/bin/chromium
URxvt.keysym.M-u:       perl:url-select:select_next
URxvt.underlineURLs: 	true
URxvt.matcher.button:   1
URxvt.clipboard.copycmd:  xsel --input --clipboard
URxvt.clipboard.pastecmd: xsel --output --clipboard

! xscreensaver

!font settings
xscreensaver.Dialog.headingFont:        -*-dina-bold-r-*-*-12-*-*-*-*-*-*-*
xscreensaver.Dialog.bodyFont:           -*-dina-medium-r-*-*-12-*-*-*-*-*-*-*
xscreensaver.Dialog.labelFont:          -*-dina-medium-r-*-*-12-*-*-*-*-*-*-*
xscreensaver.Dialog.unameFont:          -*-dina-medium-r-*-*-12-*-*-*-*-*-*-*
xscreensaver.Dialog.buttonFont:         -*-dina-bold-r-*-*-12-*-*-*-*-*-*-*
xscreensaver.Dialog.dateFont:           -*-dina-medium-r-*-*-12-*-*-*-*-*-*-*
xscreensaver.passwd.passwdFont:         -*-dina-bold-r-*-*-12-*-*-*-*-*-*-*
!general dialog box (affects main hostname, username, password text)
xscreensaver.Dialog.foreground:         #757575
xscreensaver.Dialog.background:         #181818
xscreensaver.Dialog.topShadowColor:     #000000
xscreensaver.Dialog.bottomShadowColor:  #000000
xscreensaver.Dialog.Button.foreground:  #666666
xscreensaver.Dialog.Button.background:  #ffffff
!username/password input box and date text colour
xscreensaver.Dialog.text.foreground:    #666666
xscreensaver.Dialog.text.background:    #ffffff
xscreensaver.Dialog.internalBorderWidth:24
screensaver.Dialog.borderWidth:        20
xscreensaver.Dialog.shadowThickness:    2
!timeout bar (background is actually determined by Dialog.text.background)
xscreensaver.passwd.thermometer.foreground:  #ff3b77
xscreensaver.passwd.thermometer.background:  #000000
xscreensaver.passwd.thermometer.width:       8
!datestamp format--see the strftime(3) manual page for details
xscreensaver.dateFormat:    %I:%M%P %a %b %d, %Y



! color scheme
*foreground: #BBBBBB
*background: #181818
! Black
*color0: #303030
*color8: #5f5f5f
! Red
*color1: #eb1a14
*color9: #bc2f36
! Green
*color2: #78e700
*color10: #4e9600
! Yellow
*color3: #e3fc3f
*color11: #d8f800
! Blue
*color4: #4188d2
*color12: #0d58a6
! Magenta
*color5: #ef3c7e
*color13: #de0052
! Cyan
*color6: #36da82
*color14: #00b454
! White
*color7: #e2e2e5
*color15: #e2e2e5
