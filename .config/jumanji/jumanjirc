# jumanji config

# search engines
searchengine goog http://www.google.com/search?q=%s
searchengine wiki http://en.wikipedia.org/w/index.php?search=%s
searchengine awiki http://wiki.archlinux.org/index.php?search=%s

# browser settings
set homepage http://home.archlinux.ca
set auto_save 60

# downloads
set download_dir ~/Downloads
set download_command urxvtc -e sh -c "wget --load-cookies /home/josh/.config/jumanji/cookies '%s' -O %s";

# look
set font helvetica regular 9
set height 750
set width 1000
set inbutbar_fgcolor #cd5c5c
set statusbar_ssl_bgcolor #b0c4de
set tabbar_focus_fgcolor #cd5c5c

# key bindings
map <C-q> quit
map J nav_tabs next
map K nav_tabs previous
map H nav_history previous
map L nav_history next

# scripts
script /home/josh/.config/jumanji/scripts/hinting.js

# adblocking css
set stylesheet /home/josh/.config/jumanji/fanboy-adblocklist-elements-v3.css
