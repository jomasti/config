set alias_file = '~/.mutt/aliases'
set history_file = '~/.mutt/history'
set mailcap_path = '~/.mutt/mailcap'
set header_cache = '~/.mutt/cache/headers'
set message_cachedir = '~/.mutt/cache/bodies'
set certificate_file = '~/.mutt/certificates'
set tmpdir = '~/.mutt/tmp'



set realname = 'Joshua Stiefer'




set edit_headers = yes
set editor = 'vim'
set postponed = '~+[Gmail]/Drafts'




set reverse_alias = yes
set timeout = '60'


set markers = no
set pager_index_lines = '5'


set escape = '~'


set folder = 'imaps://imap.gmail.com:993/'
set from = 'facedelajunk@gmail.com'


set mail_check = '180'
set save_empty = yes
set spoolfile = '+INBOX'


set imap_check_subscribed = yes
set imap_keepalive = '900'



lists arch-general@archlinux.org                                # Arch general list
subscribe arch-general@archlinux.org




set smtp_url = 'smtp://facedelajunk@gmail.com@smtp.gmail.com:587/'






set move = no


set sendmail = '/usr/sbin/sendmail -oem -oi'
set use_from = yes
set user_agent = yes




set sort = 'threads'
set sort_alias = 'alias'
set sort_aux = 'last-date-received'


set ssl_force_tls = yes




color attachment brightmagenta default
color error      brightred    default
color hdrdefault red          default
color indicator  brightyellow red
color markers    brightcyan   default
color message    brightcyan   default
color normal     default      default
color quoted     brightblue   default
color search     default      green
color signature  red          default
color status     yellow       blue
color tilde      magenta      default
color tree       magenta      default

auto_view text/html
macro pager \ca <pipe-entry>'urlview'<enter> 'Follow links with urlview'
